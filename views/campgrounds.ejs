<% include partials/headers.ejs %>
<div class="container">
<header class="jumbotron">
    <div class="container">
<h1>Welcome to YelpCamp!</h1>
<p>View our handpicked campground from all over the world!</p>
<p>
    <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
</p>
</div>
</header>
<div class="row">
    <div class="col-lg-12">
        <h3>Our most popular CampgroundS</h3>
    </div>
</div>


<div class="row">
<% campgrounds.forEach(function(campground){ %>
    <!-- <li><%= campground.name %></li>
    <li><%= campground.image %></li> -->
    <div class="col-md-6 col-sm-3">
        <div class="thumbnail">
            <img src="<%= campground.image %>">
        </div>
        <div class="caption">
            <h4><%= campground.name %></h4>
        </div>
    </div>
<% }); %>
</div>
</div>
